{
  "name": "1mg.org",
  "spawnfcgi": {
    "owner" : "nginx",
    "group" : "nginx",
    "num" : "5"
  },
  "yum" : {
    "remi" : {
      "disabled" : true
    },
    "epel" : {
      "disabled" : true
    }
  },
  "sshd" : {
    "conf" : {
      "lists" : {
        "PermitRootLogin" : "yes",
        "ChallengeResponseAuthentication" : "no",
        "IgnoreUserKnownHosts" : "yes"
      }
    }
  },
  "run_list": [
    "recipe[1mg::serversman]",
    "recipe[1mg::zcloud]",
    "recipe[yum::epel]",
    "recipe[yum::remi]",
    "recipe[sendmail::default]",
    "recipe[sshd::default]",
    "recipe[nsd::default]",
    "recipe[nginx::default]",
    "recipe[mysql::server]",
    "recipe[php::default]",
    "recipe[php::module_pecl_apc]",
    "recipe[spawn-fcgi::default]",
    "recipe[iptables::default]",
    "recipe[1mg::default]"
  ]
}