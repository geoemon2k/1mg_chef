{
  "json_class" : "Chef::Role",
  "name": "1mg",
  "run_list": [
    "recipe[base::setup_hostname]",
    "recipe[base::setup_aliases]",
    "recipe[base::setup_root_user]",
    "recipe[base::stop_service]",
    "recipe[yum::epel]",
    "recipe[yum::remi]",
    "recipe[sendmail::setup]",
    "recipe[sshd::setup]",
    "recipe[nsd::setup]",
    "recipe[nsd::setup_zone]",
    "recipe[jenkins::setup]",
    "recipe[jenkins::setup_plugins]",
    "recipe[mysql::setup_server]",
    "recipe[php::setup_with_spawnfcgi]",
    "recipe[redis::setup]",
    "recipe[ruby::setup_rvm]",
    "recipe[nginx::setup]",
    "recipe[iptables::setup]",
    "recipe[base::setup_cucumber]"
  ],
  "default_attributes" : {
    "base": {
      "hostname": "server.1mg.org",
      "root_address": "keiji.ue@gmail.com",
      "on_services": [
      "crond",
      "modules_dep",
      "network",
      "portreserve",
      "rsyslog"
      ],
      "off_services": [
        "saslauthd",
        "xinetd",
        "smadmd",
        "serversman",
        "httpd",
        "ajaxterm",
        "netfs",
        "rpcbind",
        "ip6tables",
        "lvm2-monitor",
        "messagebus",
        "udev-post",
        "netconsole"
      ]
    },
    "sshd" : {
      "conf_lists" : {
        "PermitRootLogin" : "yes",
        "ChallengeResponseAuthentication" : "no",
        "IgnoreUserKnownHosts" : "yes",
        "ClientAliveInterval" : "48"
      }
    },
    "jenkins" : {
      "listen" : "127.0.0.1",
      "ajp_port" : "-1",
      "args" : "--prefix=/jenkins",
      "plugins" : ["git"]
    },
    "nsd" : {
      "zones" : [{
        "zone_name" : "1mg.org",
        "xfr" : ["127.0.0.1","123.50.202.226","198.104.58.211"]
      }, {
        "zone_name" : "1mg.biz",
        "xfr" : ["127.0.0.1","123.50.202.226","198.104.58.211"]
        }
      ]
    },
    "nginx" : {
      "conf_lists" : ["server.1mg.org", "www.1mg.org"]
    },
    "php": {
      "packages": [
        {"pkg_name": "php-mbstring"},
        {"pkg_name": "php-mcrypt", "pkg_option": "--enablerepo=epel"},
        {"pkg_name": "php-mysql"},
        {"pkg_name": "php-pecl-apc"},
        {"pkg_name": "php-redis", "pkg_option": "--enablerepo=epel"},
        ],
      "spawnfcgi": {
        "num": "5"
      }
    },
    "mysqld" : {
      "conf_lists" : {
        "datadir" : "/usr/local/1mg/var/lib/mysql/"
      }
    }
  },
  "over_attributes" : {
  }
}
