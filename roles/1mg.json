{
  "json_class" : "Chef::Role",
  "name": "1mg.org",
  "run_list": [
    "recipe[1mg::stop_service]",
    "recipe[yum::epel]",
    "recipe[yum::remi]",
    "recipe[sendmail::default]",
    "recipe[sshd::default]",
    "recipe[nsd::default]",
    "recipe[nginx::default]",
    "recipe[mysql::server]",A
    "recipe[php::default]",
    "recipe[php::php_mbstring]",
    "recipe[php::php_mcrypt]",
    "recipe[php::php_mysql]",
    "recipe[php::module_pecl_apc]",
    "recipe[spawn-fcgi::default]",
    "recipe[iptables::default]",
    "recipe[1mg::default]"
  ],
  default_attributes : {
    "spawnfcgi": {
      "owner" : "nginx",
      "group" : "nginx",
      "num" : "5"
    },
    "yum" : {
      "remi" : {
        "disabled" : true
      },
      "epel" : {
        "disabled" : true
      }
    },
    "sshd" : {
      "conf_lists" : {
        "PermitRootLogin" : "yes",
        "ChallengeResponseAuthentication" : "no",
        "IgnoreUserKnownHosts" : "yes"
      }
    },
    "nsd" : {
      "zone_lists" : {
        "1mg.org" : {
          "zonefile" : "\"zones/1mg.org.zone\"",
          "xfr" : ["127.0.0.1","123.50.202.226","198.104.58.211"]
          },
        "1mg.biz" : {
          "zonefile" : "\"zones/1mg.biz.zone\"",
          "xfr" : ["127.0.0.1","123.50.202.226","198.104.58.211"]
        }
      }
    },
    "nginx" : {
      "conf_lists" : ["server.1mg.org.conf", "www.1mg.org.conf"]
    },
    "mysqld" : {
      "conf_options" : {
        "datadir" : "/usr/local/1mg/var/lib/mysql/"
      }
    }
  },
  over_attributes : {
  }
}
