    "jenkins" : {
      "listen" : "127.0.0.1",
      "ajp_port" : "-1",
      "args" : "--prefix=/jenkins",
      "plugins" : ["git"]
    },
    "nsd" : {
      "zones" : [{
        "zone_name" : "1mg.org",
        "xfr" : ["127.0.0.1", "160.16.54.90", "153.120.38.37"]
      }, {
        "zone_name" : "1mg.biz",
        "xfr" : ["127.0.0.1", "160.16.54.90", "153.120.38.37"]
