server {
    client_max_body_size 20M;
<% if node[:ip6address] %> 
#    listen [<%= node[:ip6address] %>]:80;
<% end %>
    listen       80;
    server_name  ee-megane.com *.ee-megane.com;

    #charset koi8-r;
    access_log  /var/log/nginx/ee-megane.com.access.log main;
    error_log  /var/log/nginx/ee-megane.com.error.log debug;

    root /usr/local/1mg/www/ee-megane.com/;
    index  index.php index.html index.htm;
    sendfile          off;

    #error_page  404              /404.html;

    # redirect server error pages to the static page /50x.html
    #
    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }

    # proxy the PHP scripts to Apache listening on 127.0.0.1:80
    #
    #location ~ \.php$ {
    #    proxy_pass   http://127.0.0.1;
    #}

    # pass the PHP scripts to FastCGI server listening on 127.0.0.1:9000
    #
    # Wordpress Security
    location ~ (xmlrpc|wp-activate|wp-signup).php {
        deny all;
    }

    location ~ /wordpress/(wp-login.php|wp-admin/) {
        auth_basic    "Need to Auth!!";
        auth_basic_user_file  "/usr/local/1mg/www/.ee.htpasswd";
        root /usr/local/1mg/www/ee-megane.com;
        include /etc/nginx/fastcgi_params;
        fastcgi_pass     127.0.0.1:9000;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    }
    location ~ \.php$ {
        root /usr/local/1mg/www/ee-megane.com;
        include /etc/nginx/fastcgi_params;
        fastcgi_pass     127.0.0.1:9000;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    }
    location / {
        expires 1d;
    }
    
    # deny access to .htaccess files, if Apache's document root
    # concurs with nginx's one
    #
    #location ~ /\.ht {
    #    deny  all;
    #}
}
